location /api/activity {
    rewrite ^/api/activity/(.*)?$ /$1  break;
    proxy_pass http://activity-upstream;
  }

location / {
    proxy_set_header Host $host;
    proxy_pass http://tomcat-upstream;
  }

location /api/user {
    rewrite ^/api/user/(.*)?$ /$1  break;
    proxy_pass http://user-upstream;
  }